<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Tasks</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-dark">
            <a class="navbar-brand" href="/tasks">myTasks</a>
        </nav>
    </header>
    <div class="container">
        <a href="/createTask">Create New Task</a>
    </div>
    <div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Client</th>
                <th>Job Name</th>
                <th>Job Number</th>
                <th>Job Panel</th>
                <th>Job Task</th>
                <th>Notes</th>
                <th>Completed</th>
                <th>Due Date</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            <% tasks.forEach(task => { %>
                <tr>
                    <td><%= task.client %><br></td>
                    <td><%= task.jobName %><br></td>
                    <td><%= task.jobNumber %><br></td>
                    <td><%= task.jobPanel %><br></td>
                    <td><%= task.jobTask %><br></td>
                    <td><%= task.notes %><br></td>   
                    <td><%= task.completed %><br></td>   
                    <td><%= task.dueDate %><br></td>
                    <td><%= task.createdAt %><br></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    </div>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>